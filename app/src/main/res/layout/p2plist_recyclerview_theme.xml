<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <data>
        <variable
            name="model"
            type="com.example.p2pconnectionexample.P2pDevice" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        >

        <ImageView
            android:id="@+id/ic_p2p"
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:background="@drawable/ic_wifi"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mP2pList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{model.name}"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/ic_p2p"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="16dp"
            tools:text="123456" />

        <ImageView
            android:id="@+id/ic_conn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_connect"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mP2pList"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>