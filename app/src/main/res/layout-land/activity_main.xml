    <View
        android:id="@+id/circle_big"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_280sdp"
        android:layout_margin="0dp"
        android:background="@drawable/solid_circle_big"
        app:layout_constraintBottom_toBottomOf="@+id/antenna"
        app:layout_constraintEnd_toEndOf="@+id/antenna"
        app:layout_constraintStart_toStartOf="@+id/antenna"
        app:layout_constraintTop_toTopOf="@+id/antenna" />

    <View
        android:id="@+id/circle_middle"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_210sdp"
        android:background="@drawable/solid_circle_middle"
        app:layout_constraintBottom_toBottomOf="@+id/antenna"
        app:layout_constraintEnd_toEndOf="@+id/antenna"
        app:layout_constraintStart_toStartOf="@+id/antenna"
        app:layout_constraintTop_toTopOf="@+id/antenna" />

    <View
        android:id="@+id/circle_small"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:background="@drawable/solid_circle_small"
        app:layout_constraintBottom_toBottomOf="@+id/antenna"
        app:layout_constraintEnd_toEndOf="@+id/antenna"
        app:layout_constraintStart_toStartOf="@+id/antenna"
        app:layout_constraintTop_toTopOf="@+id/antenna" />

    <ImageView
        android:id="@+id/antenna"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:contentDescription="Antenna"
        app:layout_constraintBottom_toTopOf="@+id/peerCount"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/ic_antenna" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lowasis Gateway"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toTopOf="@+id/antenna"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/peerCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5 networks near of you"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/antenna" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/p2plist_recyclerview"
        tools:listitem="@layout/p2plist_recyclerview_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        />

