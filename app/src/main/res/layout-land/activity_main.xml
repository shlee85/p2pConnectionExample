<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">
    <!--
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/p2plist_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EEEEEE"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wifi_title_background"
            />
    -->

    <View
        android:id="@+id/circle_big"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_margin="0dp"
        android:background="@drawable/solid_circle_big"
        app:layout_constraintBottom_toBottomOf="@+id/antenna"
        app:layout_constraintEnd_toEndOf="@+id/antenna"
        app:layout_constraintStart_toStartOf="@+id/antenna"
        app:layout_constraintTop_toTopOf="@+id/antenna" />

    <View
        android:id="@+id/circle_middle"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@drawable/solid_circle_middle"
        app:layout_constraintBottom_toBottomOf="@+id/antenna"
        app:layout_constraintEnd_toEndOf="@+id/antenna"
        app:layout_constraintStart_toStartOf="@+id/antenna"
        app:layout_constraintTop_toTopOf="@+id/antenna" />

    <View
        android:id="@+id/circle_small"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/solid_circle_small"
        app:layout_constraintBottom_toBottomOf="@+id/antenna"
        app:layout_constraintEnd_toEndOf="@+id/antenna"
        app:layout_constraintStart_toStartOf="@+id/antenna"
        app:layout_constraintTop_toTopOf="@+id/antenna" />

    <ImageView
        android:id="@+id/antenna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/peerList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peerCount"
        app:srcCompat="@drawable/ic_antenna" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lowasis Gateway"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/peerList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/peerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="5 networks neer of you"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/peerList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.example.p2pconnectionexample.SquareFrameLandLayout
        android:id="@+id/peerList"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/p2plist_recyclerview"
            tools:listitem="@layout/p2plist_recyclerview_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.example.p2pconnectionexample.SquareFrameLandLayout>

</androidx.constraintlayout.widget.ConstraintLayout>